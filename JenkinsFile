pipeline {
    agent any  // Use any available agent/node

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                git branch: 'main', url: 'https://github.com/<your-username>/<your-repository>.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                // Replace with your build command (e.g., Maven/Gradle/NPM)
                sh './gradlew build'  // Example for Gradle build
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Replace with your test command
                sh './gradlew test'  // Example for running Gradle tests
            }
